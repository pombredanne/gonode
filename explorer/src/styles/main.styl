*,
*:before,
*:after
  -webkit-box-sizing: border-box
  -moz-box-sizing:    border-box
  box-sizing:         border-box

a
  color: inherit
  text-decoration: none

#app
  width: 100%
  height: 100%

.icon
  width: 16px
  height: 16px

html, body
  font-size: 16px
  font-family: 'Open Sans', sans-serif
  line-height: 22px
  margin: 0
  background: $color-main-background
  color:      $color-main-text
  overflow: none
  height: 100%
  width:  100%
  overflow: hidden

.content
  position: absolute
  top:    0
  right:  0
  bottom: 0
  left:   $navigation-width
  overflow: hidden

.content-overlay
  opacity: 0.75
  position: absolute
  background: darken($color-main-background, 10)
  top:    0
  right:  0
  bottom: 0
  left:   0
  cursor: pointer
  display: none

  &:hover
    opacity: 0.5

  &._is-opened
    display: block

.page-header
  position: absolute
  top   0
  right 0
  left  0
  height $header-height
  padding: 17px 20px

  &_title
    vertical-align: middle
    font-weight: 300
    margin:  0
    padding: 0
    display: inline-block
    font-family: 'Open Sans', sans-serif

  &_button
    margin-left: 12px
    vertical-align: middle
    display: inline-block
    background: #2e72aa
    color: darken($color-main-background, 10)
    font-weight: 500
    padding: 7px 9px
    font-size: 14px
    line-height: 1em
    border-radius: 2px

.panel-header
  position: absolute
  top   0
  right 0
  left  0
  height $header-height
  background: $color-navigation-background-over
  box-shadow 0 1px 2px rgba(0, 0, 0, .5)
  display flex
  align-items center
  padding 0 20px

  &_close
    width  32px
    height 32px
    cursor pointer
    text-align center
    line-height 32px
    margin-right 12px
    font-size 18px

  .button
    margin-left 12px

.panel-title
  flex-grow 1
  margin 0
  display inline-block
  font-weight 300
  font-size 24px
  color #fff
  font-family 'Open Sans', sans-serif

.panel-body
  padding: 0 20px
  position absolute
  top    $header-height
  right  0
  bottom 0
  left   0
  overflow-y auto

.second-panel
  position: absolute
  top:    0
  left:   100%
  bottom: 0
  background: $color-second-panel-background
  width: 80%
  transition: left 200ms
  box-shadow: -3px 0 3px rgba(0, 0, 0, 0.15)

  &._is-opened
    left: 20%

.node-main
  position absolute
  top    0
  right  $node-revisions-width
  left   0
  bottom 0
  overflow hidden

.nodes-wrapper
  display: flex
  flex-direction: column
  width: 100%
  height: 100%

  .nodes-list
    flex-grow: 1

.node-raw
  background-color: darken($color-second-panel-background, 7)
  margin: 0 -20px
  padding: 10px 20px
  font-size: 14px
  line-height: 20px
  border-top:    1px solid darken($color-second-panel-background, 12)
  border-bottom: 1px solid darken($color-second-panel-background, 12)

.node-properties
  margin: 20px 0
  padding: 0
  list-style: none
  &_item
    &_key
      color: darken($color-main-text, 20)
    &_value
      font-weight: 500
