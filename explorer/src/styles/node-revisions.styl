.node_revisions
  display: block
  position: absolute
  top:    0
  right:  0
  bottom: 0
  background-color: $color-node-revs-background
  overflow hidden
  width $node-revisions-width
  box-shadow 1px 0 2px rgba(0, 0, 0, .5) inset

  &:before
    content ' '
    display block
    position absolute
    height 100%
    width $node-revisions-stroke-width
    background-color $color-node-revs-stroke
    top  0
    left ($node-revisions-width / 2 - $node-revisions-stroke-width / 2)

  &_loader
    position absolute
    text-align center
    font-size 12px
    width  $node-revisions-loader-size
    height $node-revisions-loader-size
    background $color-node-revs-background
    border-radius ($node-revisions-loader-size / 2)
    top  10px
    left (($node-revisions-width - $node-revisions-loader-size) / 2)
    border 2px solid $color-node-revs-stroke
    opacity 0
    transform translate3d(0, -10px, 0)
    box-shadow 0 0 3px rgba(0, 0, 0, .95)
    transition opacity   200ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
               transform 200ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

    &:before
      content ' '
      position absolute
      top  3px
      left 3px
      background $color-node-revs-loader
      width  $node-revisions-loader-size - 10px
      height $node-revisions-loader-size - 10px
      border-radius ($node-revisions-loader-size / 2)

      -webkit-transition                all 200ms ease-in-out
      -moz-transition                   all 200ms ease-in-out
      transition                        all 200ms ease-in-out

      -webkit-animation-direction       normal
      -webkit-animation-duration        400ms
      -webkit-animation-iteration-count infinite
      -webkit-animation-name            scale-blink
      -webkit-animation-timing-function ease-in-out

      -moz-animation-direction          normal
      -moz-animation-duration           400ms
      -moz-animation-iteration-count    infinite
      -moz-animation-name               scale-blink
      -moz-animation-timing-function    ease-in-out

    &-loading
      opacity 1
      transform translate3d(0, 0, 0)

  &_wrapper
    position absolute
    width 100%
    top    0
    right  0
    bottom 0
    overflow-y auto
    padding 35px 0 50px 0

  &_more
    position absolute
    bottom 15px
    left   ($node-revisions-width / 2)
    margin-left $node-revisions-more-size * -.5
    width  $node-revisions-more-size
    height $node-revisions-more-size
    line-height ($node-revisions-more-size - $node-revisions-stroke-width * 2)
    cursor pointer
    text-align center
    background $color-node-revs-background
    color      $color-node-revs-stroke
    border $node-revisions-stroke-width solid $color-node-revs-stroke
    border-radius ($node-revisions-more-size / 2)
    font-size 18px
    box-shadow 0 0 3px rgba(0, 0, 0, .95)

    &:hover
      background $color-node-revs-stroke
      color      $color-node-revs-background

  &_range-header
    display block
    text-align center
    margin 10px 0

    &_label
      line-height 1em
      font-size 12px
      padding 6px 11px
      display inline-block
      border-radius 2px
      background darken($color-node-revs-background, 3)
      color      lighten($color-node-revs-stroke, 7)
      border 1px solid $color-node-revs-stroke

  &_item
    position relative
    width  $node-revisions-width
    height $node-revision-height
    color $color-node-revs-text

    &_day,
    &_time
      line-height 1em
      text-align center

    &_day
      font-size 20px
      font-weight 300
      margin-top 10px
      margin-bottom 1px

    &_time
      font-size 10px

    &-enter
      opacity 0.01
      transform translate3d(0, -30px, 0)

    &-enter&-enter-active
      opacity 1
      transform translate3d(0, 0, 0)
      transition opacity   400ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                 transform 400ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

    &-leave
      opacity 1
      transform translate3d(0, 0, 0)

    &-leave&-leave-active
      opacity 0.01
      transform translate3d(0, 30px, 0)
      transition opacity   200ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                 transform 200ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

    &-current
      .node_revisions_item_circle:after
        display block

    &_circle
      position absolute
      top  50%
      left 50%
      margin-top  $node-revision-circle-size * -.5
      margin-left $node-revision-circle-size * -.5
      cursor pointer
      display flex
      flex-direction column
      width  $node-revision-circle-size
      height $node-revision-circle-size
      border-radius ($node-revision-circle-size / 2)
      text-align center
      background-color $color-node-rev-circle-background
      transition background 200ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                 color      200ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

      &:before,
      &:after
        display block
        content ' '
        position absolute
        top ($node-revision-circle-size * .5 - ($node-revision-indicator-size / 2))
        width  $node-revision-indicator-size
        height $node-revision-indicator-size
        border-radius ($node-revision-indicator-size / 2)

      &:before
        background $color-node-revs-stroke // lighten($color-node-revs-background, 16)
        left -20px
        border-right 0
        transform translate3d(-50px, 0, 0)
        opacity 0
        transition transform 300ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
                   opacity   300ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

      &:after
        display none
        right -20px
        background $color-node-revs-current

      &:hover
        background-color $color-node-rev-circle-background-hover
        color            $color-node-revs-text-hover

      &-active,
      &-active:hover
        background-color $color-node-rev-circle-background-active
        color            $color-node-revs-text-active
        box-shadow 0 0 5px rgba(0, 0, 0, .85)

        &:before
          opacity 1
          transform translate3d(0, 0, 0)
