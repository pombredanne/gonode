.node_delete
  &-enter
    opacity 0.01
    transform translate3d(15px, 0, 0)

  &-enter&-enter-active
    opacity 1
    transform translate3d(0, 0, 0)
    transition opacity   400ms cubic-bezier(0.250, 0.460, 0.450, 0.940),
               transform 400ms cubic-bezier(0.250, 0.460, 0.450, 0.940)

  &-leave
    display none

  &-leave&-leave-active
    display none
